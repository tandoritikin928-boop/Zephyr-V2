local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")

local player = Players.LocalPlayer
local camera = workspace.CurrentCamera

-- GUI作成
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "EnemyTrackerUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- 太い虹色枠フレーム
local borderSize = 6 -- フレームの太さ
local borderFrame = Instance.new("Frame")
borderFrame.Size = UDim2.new(0, 150 + borderSize*2, 0, 50 + borderSize*2)
borderFrame.Position = UDim2.new(0, 20 - borderSize, 0, 20 - borderSize)
borderFrame.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- 初期は赤
borderFrame.BorderSizePixel = 0
borderFrame.Parent = screenGui

local borderCorner = Instance.new("UICorner")
borderCorner.CornerRadius = UDim.new(0, 12 + borderSize)
borderCorner.Parent = borderFrame

-- 内側フレーム（ボタン用）
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 150, 0, 50)
frame.Position = UDim2.new(0, borderSize, 0, borderSize)
frame.BackgroundColor3 = Color3.fromRGB(255, 255, 255) -- 背景は白
frame.BorderSizePixel = 0
frame.Parent = borderFrame

local frameCorner = Instance.new("UICorner")
frameCorner.CornerRadius = UDim.new(0, 12)
frameCorner.Parent = frame

-- ボタン作成
local button = Instance.new("TextButton")
button.Size = UDim2.new(1, 0, 1, 0)
button.Position = UDim2.new(0, 0, 0, 0)
button.Text = "追跡: OFF"
button.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Parent = frame

local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 8)
buttonCorner.Parent = button

-- 追跡フラグ
local tracking = false

button.MouseButton1Click:Connect(function()
    tracking = not tracking
    if tracking then
        button.Text = "追跡: ON"
    else
        button.Text = "追跡: OFF"
        borderFrame.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- OFF時は赤
    end
end)

-- 近くの敵を取得
local function getNearestEnemy()
    local nearest = nil
    local shortestDistance = 150

    if not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") then
        return nil
    end

    local origin = camera.CFrame.Position
    local myTeam = player.Team

    for _, other in pairs(Players:GetPlayers()) do
        if other ~= player and other.Character and other.Team ~= myTeam then
            local hrp = other.Character:FindFirstChild("HumanoidRootPart")
            local humanoid = other.Character:FindFirstChild("Humanoid")

            if hrp and humanoid and humanoid.Health > 0 then
                local distance = (hrp.Position - player.Character.HumanoidRootPart.Position).Magnitude

                if distance < shortestDistance then
                    local raycastParams = RaycastParams.new()
                    raycastParams.FilterDescendantsInstances = {player.Character, other.Character}
                    raycastParams.FilterType = Enum.RaycastFilterType.Blacklist

                    local rayResult = Workspace:Raycast(origin, (hrp.Position - origin), raycastParams)
                    if not rayResult then
                        shortestDistance = distance
                        nearest = other
                    end
                end
            end
        end
    end

    return nearest
end

-- 虹色用変数
local hue = 0

-- カメラ追従 & フレーム色変化
RunService.RenderStepped:Connect(function(deltaTime)
    if tracking then
        -- 虹色回転
        hue = (hue + deltaTime * 0.2) % 1
        borderFrame.BackgroundColor3 = Color3.fromHSV(hue, 1, 1)

        -- 敵を追跡
        local target = getNearestEnemy()
        if target and target.Character then
            local targetPos = target.Character.HumanoidRootPart.Position
            camera.CFrame = CFrame.lookAt(camera.CFrame.Position, targetPos)
        end
    end
end)
